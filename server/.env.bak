# ============================================
# SERVER ENVIRONMENT CONFIGURATION
# ============================================
# IMPORTANT: This file contains sensitive information
# DO NOT commit this file to version control

# Environment Configuration
# Set to: development, staging, or production
# Priority: ENVIRONMENT > NODE_ENV
ENVIRONMENT=development
NODE_ENV=development

# Server Configuration
PORT=5000

# MongoDB Configuration
# Development: Use local MongoDB or MongoDB Atlas
# Production: Use production MongoDB connection string
MONGODB_URI=mongodb://yard_user:lkgfukgfgfkjhtrdtdkgsjfdsjbdgvdhkgkklffFHFHdS@13.235.246.242:57019/yard_db_app
MONGODB_DB_NAME=yard_db_app

# JWT Configuration
# IMPORTANT: Change this to a strong random string in production
# Generate using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# CORS Configuration
# Development: Allow local frontend
# Production: Allow production frontend domain
CORS_ORIGIN=http://localhost:5173,http://localhost:5174,http://localhost:3000

# API Configuration
API_PREFIX=/api/v1

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Redis Configuration (Optional - for caching, sessions, queues)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Cloudinary Configuration (Optional - for image hosting)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# AWS S3 Configuration (Optional - for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=

# Bull Queue Configuration
BULL_REDIS_HOST=localhost
BULL_REDIS_PORT=6379
BULL_REDIS_PASSWORD=
BULL_REDIS_DB=1

# Swagger/API Documentation
# Development: true (enabled)
# Production: false (disabled for security)
SWAGGER_ENABLED=true
SWAGGER_PATH=/api-docs

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Monitoring (Prometheus)
METRICS_ENABLED=true
METRICS_PATH=/metrics

# Google OAuth Configuration (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
